# LinkedIn Job Application Bot Environment Configuration
# Copy this file to .env and update with your settings

# Bot Configuration
BOT_MIN_DELAY=1.0
BOT_MAX_DELAY=3.0
BOT_MAX_APPLICATIONS=10
BOT_HEADLESS=false
BOT_LOG_LEVEL=INFO

# File Paths
JOBS_FILE=jobs.json
PROFILE_FILE=profile.json
COOKIES_FILE=cookies/linkedin_cookies.json
LOG_FILE=logs/bot.log

# Browser Settings
CHROME_BINARY_PATH=/usr/bin/google-chrome
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver

# LinkedIn Settings
LINKEDIN_EMAIL=your.email@example.com
LINKEDIN_PASSWORD=your_password_here

# Notification Settings (optional)
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your/webhook/url
EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your.email@gmail.com
SMTP_PASSWORD=your_app_password

# Advanced Settings
ENABLE_SCREENSHOTS=true
SCREENSHOT_DIR=screenshots
ENABLE_BACKUPS=true
BACKUP_DIR=backups
MAX_RETRIES=3
RETRY_DELAY=5

# Platform Specific Settings
LINKEDIN_PRIORITY=10
INDEED_PRIORITY=8
GLASSDOOR_PRIORITY=7
BUILTIN_PRIORITY=6

# Rate Limiting
REQUESTS_PER_MINUTE=10
COOLDOWN_BETWEEN_JOBS=30
# LLM Integration Settings
LLM_PROVIDER=ollama  # Options: openai, anthropic, ollama
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=llama2  # For Ollama: llama2, codellama, etc. For OpenAI: gpt-4, gpt-3.5-turbo
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7
OLLAMA_BASE_URL=http://localhost:11434

# GitHub Integration Settings
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO_OWNER=your_github_username
GITHUB_REPO_NAME=your_repository_name
GITHUB_API_URL=https://api.github.com
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Webhook Server Settings
WEBHOOK_PORT=5000
WEBHOOK_HOST=0.0.0.0

# Enhanced Bot Settings
ENABLE_LLM_ANALYSIS=true
ENABLE_GITHUB_TRACKING=true
MIN_RELEVANCE_SCORE=60
ENABLE_AUTO_FOLLOW_UP=true
FOLLOW_UP_DAYS=7

# Job Filtering Settings
ENABLE_SMART_FILTERING=true
SKIP_LOW_RELEVANCE_JOBS=true
RELEVANCE_THRESHOLD=60

# Reporting Settings
ENABLE_SESSION_REPORTS=true
REPORTS_DIR=reports
ENABLE_WEEKLY_REPORTS=true
